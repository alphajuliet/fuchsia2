{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["dom", "es2017", "dom.iterable", "scripthost"],
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ]
}